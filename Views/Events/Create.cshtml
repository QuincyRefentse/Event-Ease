@model EventEase.Models.Event

@{
    ViewData["Title"] = "Create";
}

<style>
    .form-container {
        background-color: #f8f9fa;
        border-left: 6px solid #00509e;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
    }

    .form-label {
        color: #003366;
        font-weight: 600;
    }

    .btn-primary {
        background-color: #00509e;
        border-color: #00509e;
    }

        .btn-primary:hover {
            background-color: #003366;
            border-color: #003366;
        }

    .btn-secondary {
        background-color: #80d0ff;
        border: none;
        color: #003366;
    }

        .btn-secondary:hover {
            background-color: #87ceeb;
        }

    .text-secondary {
        color: #00509e !important;
    }
</style>

<div class="container">
   
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mt-4">Create a New Event</h1>
            <h4 class="mb-4 text-secondary">Event Information</h4>
            <div class="form-container">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Event Name -->
                    <div class="form-group mb-3">
                        <label asp-for="EventName" class="form-label">Event Name</label>
                        <input asp-for="EventName" class="form-control" />
                        <span asp-validation-for="EventName" class="text-danger"></span>
                    </div>

                    <!-- Event Date -->
                    <div class="form-group mb-3">
                        <label asp-for="EventDate" class="form-label">Event Date</label>
                        <input asp-for="EventDate" class="form-control" type="date" />
                        <span asp-validation-for="EventDate" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Venue -->
                    <div class="form-group mb-3">
                        <label asp-for="VenueId" class="form-label">Venue</label>
                        <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId">
                            <option value="">-- Select Venue --</option>
                        </select>
                        <span asp-validation-for="VenueId" class="text-danger"></span>
                    </div>

                    <!-- Image Upload -->
                    <div class="form-group mb-4">
                        <label class="form-label">Event Image</label>
                        <input type="file" name="ImageFile" class="form-control" />
                    </div>

                    <!-- Submit -->
                    <div class="form-group text-end">
                        <button type="submit" class="btn btn-primary">Create Event</button>
                    </div>
                </form>
            </div>

            <div class="mt-3 text-center">
                <a class="btn btn-secondary" asp-action="Index">← Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

