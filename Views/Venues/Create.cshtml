@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Create";
}

<style>
    .form-container {
        background-color: #f8f9fa;
        border-left: 6px solid #00509e;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
    }

    .form-label {
        color: #003366;
        font-weight: 600;
    }

    .btn-primary {
        background-color: #00509e;
        border-color: #00509e;
    }

        .btn-primary:hover {
            background-color: #003366;
            border-color: #003366;
        }

    .btn-secondary {
        background-color: #80d0ff;
        border: none;
        color: #003366;
    }

        .btn-secondary:hover {
            background-color: #87ceeb;
        }

    .text-secondary {
        color: #00509e !important;
    }
</style>

<div class="container">
   
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="mt-4">Create a New Venue</h1>
            <h4 class="mb-4 text-secondary">Venue Information</h4>
            <div class="form-container">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    
                    <!-- Venue Name -->
                    <div class="form-group mb-3">
                        <label asp-for="VenueName" class="form-label">Venue Name</label>
                        <input asp-for="VenueName" class="form-control" />
                        <span asp-validation-for="VenueName" class="text-danger"></span>
                    </div>

                    <!-- Venue Location -->
                    <div class="form-group mb-3">
                        <label asp-for="VenueLocaiton" class="form-label">Venue Location</label>
                        <input asp-for="VenueLocaiton" class="form-control" />
                        <span asp-validation-for="VenueLocaiton" class="text-danger"></span>
                    </div>

                    <!-- Image URL -->
                    <div class="form-group mb-3">
                        <label asp-for="ImageVenue" class="form-label">Image URL</label>
                        <input asp-for="ImageVenue" class="form-control" />
                        <span asp-validation-for="ImageVenue" class="text-danger"></span>
                    </div>

                    <!-- Image Upload -->
                    <div class="form-group mb-4">
                        <label for="venueImage" class="form-label">Venue Image</label>
                        <input type="file" name="venueImage" class="form-control-file" />
                        <span asp-validation-for="ImageVenue" class="text-danger"></span>
                    </div>

                    <!-- Capacity -->
                    <div class="form-group mb-3">
                        <label asp-for="Capacity" class="form-label">Capacity</label>
                        <input asp-for="Capacity" class="form-control" />
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>

                    <!-- Submit -->
                    <div class="form-group text-end">
                        <button type="submit" class="btn btn-primary">Create Venue</button>
                    </div>
                </form>
            </div>

            <div class="mt-3 text-center">
                <a class="btn btn-secondary" asp-action="Index">← Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
