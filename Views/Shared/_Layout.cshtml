    <!-- AOS CSS (Animate on Scroll) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventEase.styles.css" asp-append-version="true" />

    <style>
        body {
            background: linear-gradient(to right, #f0f4ff, #e0f7ff);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(45deg, #003366, #89CFF0);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .navbar-nav .nav-link {
            color: #ffffff !important;
            transition: color 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #000000 !important;
                text-decoration: underline;
            }

        .navbar-nav .nav-item.active .nav-link {
            color: #4facfe !important;
            font-weight: bold;
        }

        .navbar-brand {
            font-weight: bold;
            color: #ffffff !important;
            font-size: 1.6rem;
        }

            .navbar-brand:hover {
                color: #a2c2e4;
            }

        .hero {
            text-align: center;
            padding: 60px 20px;
            background: linear-gradient(90deg, #003366, #89CFF0);
            color: white;
            border-radius: 12px;
            margin-bottom: 40px;
        }

            .hero h1 {
                font-size: 3rem;
                margin-bottom: 20px;
            }

            .hero p {
                font-size: 1.2rem;
                max-width: 700px;
                margin: 0 auto;
            }

        /* Search */
        .search-container {
            display: flex;
            gap: 10px;
            max-width: 500px;
            margin: 30px auto;
        }

            .search-container input[type="text"],
            .search-container button {
                flex: 1;
                padding: 10px;
                border-radius: 5px;
            }

            .search-container input[type="text"] {
                border: 1px solid #ccc;
            }

            .search-container button {
                background-color: #003366;
                color: white;
                border: none;
                transition: background-color 0.3s ease;
            }

                .search-container button:hover {
                    background-color: #0055aa;
                }

        /* Feature Section */
        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
            padding: 40px 20px;
        }

        .feature-card {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 25px;
            text-align: center;
            transition: transform 0.3s;
        }

            .feature-card:hover {
                transform: translateY(-5px);
            }

            .feature-card h3 {
                margin-bottom: 15px;
                color: #003366;
            }

        .footer {
            background-color: #f8f9fa;
            padding: 20px 0;
        }
    </style>
</head>
