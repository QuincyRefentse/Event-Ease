
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventEase</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EventEase.styles.css" asp-append-version="true" />
    
    <link href="~/css/site.css" rel="stylesheet" />
    


    <style>
        /* Gradient Background for Navbar */
        .navbar {
            background: linear-gradient(45deg, #003366, #89CFF0); /* From coral to light orange */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        }

        /* Navbar links - Text color */
        .navbar-nav .nav-link {
            color: #ffffff !important; /* White color for better contrast */
            transition: color 0.3s ease; /* Smooth transition on hover */
        }

            /* Navbar links hover effect */
            .navbar-nav .nav-link:hover {
                color: #000000 !important; /* Darken text color when hovered */
                text-decoration: underline; /* Add underline on hover */
            }

        /* Active link style */
        .navbar-nav .nav-item.active .nav-link {
            color: #4facfe !important; /* Light orange color for active item */
            font-weight: bold; /* Make active link bold */
        }

        /* Mobile Navbar toggle button */
        .navbar-toggler-icon {
            background-color: #ffffff; /* Make the hamburger icon white */
        }

        /* Navbar Branding */
      

        .navbar-brand {
            font-weight: bold;
            color: #ffffff !important; /* Set navbar brand text color to white */
            font-size: 1.6rem; /* Increase font size for brand */
        }

            .navbar-brand:hover {
                color: #a2c2e4; /* Light orange on hover for brand */
            }
    </style>
</head>
<body>
    <!-- Header with Navigation Bar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo and Brand -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EventEase</a>

                <!-- Navbar Toggle for Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Create">Events</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Bookings" asp-action="Create">Bookings</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Venues" asp-action="Create">Venues</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Area -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EventEase - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JS Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>




