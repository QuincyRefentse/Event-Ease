                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EventEase</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Events" asp-action="Create">Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Bookings" asp-action="Create">Bookings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Venues" asp-action="Create">Venues</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Area -->
    <div class="container">
        <main role="main" class="pb-3">
            <!-- Hero Section -->
            <div class="hero" data-aos="fade-up">
                <h1>Welcome to EventEase</h1>
                <p>Your one-stop platform to book, manage, and attend events effortlessly.</p>
            </div>

           

            <!-- Features Section -->
            <div class="features" data-aos="zoom-in">
                <div class="feature-card">
                    <h3>Event Listings</h3>
                    <p>Discover upcoming events with detailed descriptions and categories.</p>
                </div>
                <div class="feature-card">
                    <h3>Venue Booking</h3>
                    <p>Book the best venues suited for your audience and budget.</p>
                </div>

                <div class="feature-card">
                    <h3>Secure Payments</h3>
                    <p>Easy and secure checkout for all your bookings and purchases.</p>
                </div>

            </div>

            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer border-top text-muted">
        <div class="container text-center">
            &copy; 2025 - EventEase - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- AOS Script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script>
        AOS.init({
            duration: 1000,
            once: true
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

